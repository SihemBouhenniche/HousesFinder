<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@color/mediumBlue">

        <ImageView
                android:layout_width="35dp"
                android:layout_height="27dp"
                app:srcCompat="@drawable/ic_home_black_24dp"
                android:id="@+id/icon1"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tv1"
                app:layout_constraintStart_toStartOf="@+id/tv1" android:layout_marginStart="316dp"/>
        <TextView
                android:text="@string/annonce_details"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:textColor="@color/lightBlue"
                android:fontFamily="@font/kollektif_bold"
                android:id="@+id/tv1" android:layout_margin="30dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginStart="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginBottom="20dp" android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" android:layout_marginTop="20dp" android:background="@color/grey">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Type :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textColor="@color/black"
                    android:fontFamily="@font/kollektif_bold"
                    android:layout_marginRight="10dp" android:layout_marginLeft="15dp" android:textSize="18sp"/>
            <TextView
                    android:text="....."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/typeDetails" android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textColor="@color/black"
                    android:fontFamily="@font/kollektif_bold"
                    android:layout_marginRight="10dp" android:layout_weight="1" android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Wilaya :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textColor="@color/black"
                    android:fontFamily="@font/kollektif_bold"
                    android:layout_marginRight="10dp" android:layout_marginLeft="15dp" android:textSize="18sp"/>
            <TextView
                    android:text="....."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wilayaDetails" android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textColor="@color/black"
                    android:fontFamily="@font/kollektif_bold"
                    android:layout_marginRight="10dp" android:layout_weight="1" android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Prix :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textColor="@color/black"
                    android:fontFamily="@font/kollektif_bold"
                    android:layout_marginRight="10dp" android:layout_marginLeft="15dp" android:textSize="18sp"/>
            <TextView
                    android:text="....."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/priceDetails" android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textColor="@color/black"
                    android:fontFamily="@font/kollektif_bold"
                    android:layout_marginRight="10dp" android:layout_weight="1" android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Superficie :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textColor="@color/black"
                    android:fontFamily="@font/kollektif_bold"
                    android:layout_marginRight="10dp" android:layout_marginLeft="15dp" android:textSize="18sp"/>
            <TextView
                    android:text="....."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/areaDetails" android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textColor="@color/black"
                    android:fontFamily="@font/kollektif_bold"
                    android:layout_marginRight="10dp" android:layout_weight="1" android:textSize="18sp"/>
        </LinearLayout>
        <TextView
                android:text="Quleques photos : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:textColor="@color/black"
                android:fontFamily="@font/kollektif_bold"
                android:layout_marginRight="10dp" android:layout_marginLeft="15dp" android:textSize="18sp"
                android:id="@+id/textView" android:layout_weight="1"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@color/mediumBlue">

        <ImageView
                android:layout_width="35dp"
                android:layout_height="27dp"
                app:srcCompat="@drawable/ic_person_black_24dp"
                android:id="@+id/imageView"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="@+id/textView3" android:layout_marginStart="316dp"/>
        <TextView
                android:text="@string/seller_details"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:textColor="@color/lightBlue"
                android:fontFamily="@font/kollektif_bold"
                android:id="@+id/textView3" android:layout_margin="30dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginStart="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginBottom="20dp" android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" android:layout_marginTop="20dp" android:background="@color/grey">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Nom :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textColor="@color/black"
                    android:fontFamily="@font/kollektif_bold"
                    android:layout_marginRight="10dp" android:layout_marginLeft="15dp" android:textSize="18sp"/>
            <TextView
                    android:text="....."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fnameDetails" android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textColor="@color/black"
                    android:fontFamily="@font/kollektif_bold"
                    android:layout_marginRight="10dp" android:layout_weight="1" android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Wilaya :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textColor="@color/black"
                    android:fontFamily="@font/kollektif_bold"
                    android:layout_marginRight="10dp" android:layout_marginLeft="15dp" android:textSize="18sp"
                    android:id="@+id/Prénom"/>
            <TextView
                    android:text="....."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lnameDetails" android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textColor="@color/black"
                    android:fontFamily="@font/kollektif_bold"
                    android:layout_marginRight="10dp" android:layout_weight="1" android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Email :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textColor="@color/black"
                    android:fontFamily="@font/kollektif_bold"
                    android:layout_marginRight="10dp" android:layout_marginLeft="15dp" android:textSize="18sp"/>
            <TextView
                    android:text="....."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/emailDetails" android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textColor="@color/black"
                    android:fontFamily="@font/kollektif_bold"
                    android:layout_marginRight="10dp" android:layout_weight="1" android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Phone :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textColor="@color/black"
                    android:fontFamily="@font/kollektif_bold"
                    android:layout_marginRight="10dp" android:layout_marginLeft="15dp" android:textSize="18sp"/>
            <TextView
                    android:text="....."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/phoneDetails" android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textColor="@color/black"
                    android:fontFamily="@font/kollektif_bold"
                    android:layout_marginRight="10dp" android:layout_weight="1" android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>